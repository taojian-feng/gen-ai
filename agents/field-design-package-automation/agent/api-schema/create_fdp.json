{"openapi": "3.0.0",
    "info": {
        "title": "Create Field Design Package Automation API",
        "version": "1.0.0",
        "description": "API for creating new Field Design Package."
    },
    "paths": {
        "/create-claim": {
            "post": {
                "summary": "Create a new field design package",
                "description": "Create a new a new field design package (FDP), then update the database with the new FDP. Return the newly created FDP's FDPId and list of pending documents and drawings in comma-separated plaintext.",
                "operationId": "createFDP",
                "responses": {
                    "200": {
                        "description": "Creates an field design package",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "claimId": {
                                            "type": "string",
                                            "description": "Unique ID of the FDP."
                                        },
                                        "policyId": {
                                            "type": "string",
                                            "description": "Unique ID of the facility engineer who has filed the FDP."
                                        },
                                        "status": {
                                            "type": "string",
                                            "description": "The status of the FDP. FDP can be in Open or Closed state."
                                        },
                                        "pendingDocuments": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "description": "List of pending drawings and documents required for the FDP."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
